        <Label Content="Add one new members about your website:" HorizontalAlignment="Left" Margin="174,47,0,0" VerticalAlignment="Top" FontSize="22" Height="38" Width="486"/>
        <Button Content="LOGOUT" x:Name="logoutBtn"  HorizontalAlignment="Left" Margin="686,15,0,0" VerticalAlignment="Top" Width="96" Height="40" FontSize="20" FontFamily="Times New Roman" FontWeight="Bold" Background="#FF0D034F" Foreground="#FFFDEEEE" Click="logoutBtn_Click" />
        <Label Content="----" x:Name="Entered_Name" HorizontalAlignment="Left" Margin="10,9,0,0" VerticalAlignment="Top" FontSize="16" Height="32" Width="632" FontWeight="Bold" FontStyle="Italic" FontFamily="Times New Roman" Foreground="#FFFFF407"/>

    </Grid>
