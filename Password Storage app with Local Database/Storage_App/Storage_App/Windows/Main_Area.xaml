<Window x:Class="Storage_App.Main_Area"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Storage_App"
        mc:Ignorable="d"
        Title="Main_Area" ResizeMode="NoResize" Height="614.84" Width="800" WindowStartupLocation="CenterScreen" Background="#FFF77272" Icon="mainArea.ico">
    <Grid>
        <TextBox HorizontalAlignment="Left" x:Name="nameTxt" Height="40" Margin="243,109,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="423" FontSize="24"/>
        <TextBox HorizontalAlignment="Left" x:Name="emailTxt" Height="40" Margin="243,164,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="423" FontSize="24"/>
        <TextBox HorizontalAlignment="Left" x:Name="loginTxt" Height="40" Margin="243,221,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="423" FontSize="24"/>
        <TextBox HorizontalAlignment="Left" x:Name="passTxt" Height="40" Margin="243,276,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="423" FontSize="24"/>
        <TextBox HorizontalAlignment="Left" x:Name="urlTxt" Height="40" Margin="243,333,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="423" FontSize="24"/>
        <TextBox HorizontalAlignment="Left" x:Name="phoneTxt" Height="40" Margin="243,388,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="423" FontSize="24"/>
        <Label Content="Site Name:" HorizontalAlignment="Left" Margin="134,114,0,0" VerticalAlignment="Top" FontSize="16" Height="32" Width="86"/>
        <Label Content="Email:" HorizontalAlignment="Left" Margin="165,174,0,0" VerticalAlignment="Top" FontSize="16" Height="32" Width="56"/>
        <Label Content="Login:" HorizontalAlignment="Left" Margin="162,229,0,0" VerticalAlignment="Top" FontSize="16" Height="32" Width="53"/>
