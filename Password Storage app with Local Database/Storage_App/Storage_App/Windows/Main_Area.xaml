        <Label Content="Url:" HorizontalAlignment="Left" Margin="180,338,0,0" VerticalAlignment="Top" FontSize="16" Height="32" Width="43"/>
        <Label Content="Phone:" HorizontalAlignment="Left" Margin="158,391,0,0" VerticalAlignment="Top" FontSize="16" Height="32" Width="65"/>
        <TextBox HorizontalAlignment="Left" x:Name="commentTxt" Height="40" Margin="244,444,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="422" FontSize="24"/>
        <Label Content="Comments:" HorizontalAlignment="Left" Margin="129,448,0,0" VerticalAlignment="Top" FontSize="16" Height="32" Width="94"/>
        <Button Content="Add New" x:Name="addBtn"  HorizontalAlignment="Left" Margin="243,519,0,-2" VerticalAlignment="Top" Width="130" Height="40" FontSize="20" FontFamily="Palatino Linotype" Click="addBtn_Click" Background="#FF443C23" Foreground="#FFF9F1F1"/>
